<h1>Listing jobs</h1>

<table>
  <thead>
    <tr>
      <th>Where to</th>
      <th>When to</th>
      <th>How to</th>
      <th>Who to</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.where_to %></td>
        <td><%= job.when_to %></td>
        <td><%= job.how_to %></td>
        <td><%= job.who_to %></td>
        <td><%= job.description %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job', new_job_path %>
